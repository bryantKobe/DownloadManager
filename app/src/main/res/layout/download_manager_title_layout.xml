<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:id="@+id/mainTitle"
    app:elevation="12dp"
    app:cardBackgroundColor="@color/colorBar"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/bar_item_height"
            android:layout_margin="@dimen/bar_item_margin"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/url_hint"
            android:singleLine="true"
            android:maxLines="1"
            android:minWidth="@dimen/bar_edit_minWidth"
            android:padding="5dip"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="@dimen/bar_item_width"
            android:layout_height="@dimen/bar_item_height"
            android:layout_margin="@dimen/bar_item_margin"
            android:alpha="0.6"
            android:id="@+id/checkImageView"
            android:scaleType="centerInside"
            android:src="@drawable/icon_url_check"
            />
        <ImageButton
            android:layout_width="@dimen/bar_item_width"
            android:layout_height="@dimen/bar_item_height"
            android:layout_margin="@dimen/bar_item_margin"
            android:alpha="0.6"
            android:id="@+id/qrImageView"
            android:scaleType="centerInside"
            android:background="@drawable/icon_qr_code"/>

    </LinearLayout>
</android.support.v7.widget.CardView>